{
  "name": "process-flow-platform-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "docker:build": "docker build -t microtema/process-flow-platform-frontend:0.1.4 .",
    "docker:push": "docker push microtema/process-flow-platform-frontend:0.1.4",
    "docker:run": "docker run -d --name process-flow-platform -p 4201:4200 microtema/process-flow-platform-frontend:0.1.4",
    "kubectl": "kubectl apply -f deployment.yaml",
    "deploy": "npm run build && npm run docker:build && npm run docker:push && npm run kubectl",
    "undeploy": "kubectl delete -f deployment.yaml",
    "clean": "npm run clean:src && npm run clean:src",
    "clean:src": "find ./src -name '*.js' -delete && find ./src -name '*.js.*' -delete",
    "clean:test": "find ./tests -name '*.js' -delete && find ./tests -name '*.js.*' -delete"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "axios": "^0.19.0",
    "axios-observable": "^1.1.3",
    "bootstrap": "^4.5.3",
    "core-js": "^3.6.5",
    "register-service-worker": "^1.7.1",
    "rxjs": "^6.6.3",
    "vue": "^2.6.12",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.2.0",
    "vuex": "^3.4.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-e2e-cypress": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-pwa": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "^1.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "ts-jest": "^24.3.0",
    "typescript": "~3.9.3",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.11"
  }
}
